@model shop_app.Models.Product

@{
    ViewData["Title"] = "Update";
    Layout = "_Layout";
}

<h2>Update Page</h2>

<div>
    <h4>@Model.Name</h4>
    <p>Price: @Model.Price</p>
    <p>Description: @Model.Description</p>
</div>

<hr />

<form asp-action="Update" asp-controller="Product" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" asp-for="Name" name="Name" />
    </div>
    <div class="form-group">
        <label for="Price">Price:</label>
        <input type="number" asp-for="Price" name="Price" />
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <input type="text" asp-for="Description" name="Description" />
    </div>
    <button type="submit" class="btn btn-warning">Update</button>
</form>