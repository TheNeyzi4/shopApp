@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<shop_app.Models.Product>

@{
    ViewData["Title"] = "Read";
    Layout = "_Layout";
}

<h2>Read Page</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Handle</th>
      <td>Action</td>
    </tr>
  </thead>
  <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>
                    <a href="@Url.Action("Update", new {id = product.Id})" class="btn btn-warning">Update</a>
                    <a href="@Url.Action("Details", new {id = product.Id})" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Delete", new {id = product.Id})" class="btn btn-danger">Delete</a>
                    <a href="@Url.Action("Create")" class="btn btn-success">Create</a>
                </td>
            </tr>
        }
    </tbody>
</table>